{% schema %}
{
  "name": "t:sections.lds-breaking-news.name",
  "max_blocks": 12,
  "settings": [
    {
      "type": "checkbox",
      "id": "show_alert",
      "default": true,
      "label": "t:sections.lds-breaking-news.settings.show_alert.label"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "<b>Alerte</b> infos",
      "label": "t:sections.lds-breaking-news.settings.heading.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    }
  ],
  "blocks": [
    {
      "type": "news",
      "name": "t:sections.lds-breaking-news.blocks.news.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Votre breaknews ici",
          "label": "t:sections.lds-breaking-news.blocks.news.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.lds-breaking-news.blocks.news.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "news"
      }
    ]
  }
}
{% endschema %}
