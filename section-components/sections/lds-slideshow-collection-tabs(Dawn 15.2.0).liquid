          <{% if section.settings.slider_visual == 'dots' or section.settings.slider_visual == 'numbers' %}slideshow-component{% else %}slider-component{% endif %}  id=""  class="slider-mobile-gutter">
            <ul
              id="Slider-{{ section.id }}"
              data-id="{{ section.id }}"
              class="slideshow-list grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %}{% if section.settings.columns_tablet == '3' %} grid--{{ section.settings.columns_tablet }}-col-tablet-down{% endif %} grid--{{ section.settings.columns_mobile }}-col-tablet-down {% if section.settings.columns_desktop == 1 %} grid--full-width grid--{{ section.settings.columns_desktop }}-col-desktop{% else %} grid--{{ section.settings.columns_desktop }}-col-desktop{% endif %}{% if section.settings.swipe_on_mobile or show_desktop_slider %} lds-slideshow slideshow slider {% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %} collection-list--{{ section.settings.collection.products.size }}-items"
              role="list"
            >
              {% assign skip_card_product_styles = false %}
              {%- for product in section.settings.collection_3.products limit: section.settings.products_to_show -%}
                <li
                  id="Slide-{{ section.id }}-{{ forloop.index }}"
                  class="collection-tabs-list__item grid__item{% if show_mobile_slider or show_desktop_slider %} slideshow__slide slider__slide{% endif %}{% if block.settings.collection.featured_image == nil %} collection-list__item--no-media{% endif %}"
                  {{ block.shopify_attributes }}
                  {%- if section.settings.swipe_on_mobile or show_desktop_slider and section.settings.auto_rotate -%}
                    role="group"
                    aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
                    aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                    tabindex="-1"
                  {%- endif -%}
                >
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    skip_styles: skip_card_product_styles,
                    section_id: section.id,
                    quick_add: section.settings.quick_add,
                    quick_add_position: section.settings.quick_add_position
                  %}
                </li>
                {%- assign skip_card_product_styles = true -%}
              {%- else -%}
                {%- for i in (1..section.settings.columns_desktop) -%}
                  <li
                    class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: {{ forloop.index }};"
                    {% endif %}
                  >
                    {% liquid
                      assign ridx = forloop.rindex
                      case ridx
                        when 5
                          assign ridx = 1
                        when 6
                          assign ridx = 2
                      endcase
                    %}
                    {%- assign placeholder_image = 'product-apparel-' | append: ridx -%}
                    {% render 'card-product',
                      show_vendor: section.settings.show_vendor,
                      media_aspect_ratio: section.settings.image_ratio,
                      image_shape: section.settings.image_shape,
                      placeholder_image: placeholder_image
                    %}
                  </li>
                {%- endfor -%}
              {%- endfor -%}
            </ul>
            {%- if show_mobile_slider or show_desktop_slider -%}
              <div class="slider-buttons no-js-hidden{% if section.settings.slider_visual == 'arrows' %} sticky-slider-buttons{% endif %}">
                <button
                  type="button"
                  class="slider-button slider-button--prev"
                  name="previous"
                  aria-label="{{ 'general.slider.previous_slide' | t }}"
                >
                  {% render 'icon-caret' %}
                </button>
                {% if section.settings.slider_visual != 'arrows'%}
                  <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
                    {%- if section.settings.slider_visual == 'counter' -%}
                      <span class="slider-counter--current">1</span>
                      <span aria-hidden="true"> / </span>
                      <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                      <span class="slider-counter--total">{{ products_to_display_3 }}</span>
                    {%- else -%}
                      {%- if section.settings.slider_visual == 'dots' -%}
                        <div class="medium-hide large-up-hide">
                          <span class="slider-counter--current">1</span>
                          <span aria-hidden="true"> / </span>
                          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                          <span class="slider-counter--total">{{ products_to_display_3 }}</span>
                        </div>
                      {%- endif -%}
                      {%- liquid
                        assign product_size = products_to_display_3
                        assign columns_desktop = section.settings.columns_desktop
                        assign columns_tablet = section.settings.columns_tablet
                        assign columns_mobile = section.settings.columns_mobile
                        assign limit_to_show = section.settings.products_to_show
                        
                        if product_size >= limit_to_show
                          assign dot_count_desktop = limit_to_show | minus: columns_desktop | plus: 1
                          assign dot_count_mobile = product_size | minus: columns_desktop | minus: 1
                        else
                          assign dot_count_desktop = product_size | minus: columns_desktop | plus: 1
                          assign dot_count_mobile = product_size | minus: columns_desktop | minus: 1
                        endif
                      -%}
                      <div class="slideshow__control-wrapper{% if section.settings.slider_visual == 'dots' %} small-hide{% endif %}">
                        {% assign index_offset = 0 %}
                        {%- for product in section.settings.collection_3.products limit: dot_count_desktop -%}
                          <button class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}" aria-controls="Slider-{{ section.id }}">
                            {%- if section.settings.slider_visual == 'numbers' -%}{{ forloop.index }}{% else %}<span class="dot"></span>{%- endif -%}
                          </button>
                          {% assign index_offset = forloop.index %}
                        {%- endfor -%}
                        {%- for product in section.settings.collection_3.products limit: dot_count_mobile -%}
                          <button class="large-up-hide slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index | plus: index_offset }} {{ 'general.slider.of' | t }} {{ forloop.length | plus: index_offset }}" aria-controls="Slider-{{ section.id }}">
                            {%- if section.settings.slider_visual == 'numbers' -%}{{ forloop.index | plus: index_offset }}{% else %}<span class="dot"></span>{%- endif -%}
                          </button>
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                <button
                  type="button"
                  class="slider-button slider-button--next"
                  name="next"
                  aria-label="{{ 'general.slider.next_slide' | t }}"
                >
                  {% render 'icon-caret' %}
                </button>
              </div>
            {%- endif -%}
          </{% if section.settings.slider_visual == 'dots' or section.settings.slider_visual == 'numbers' %}slideshow-component{% else %}slider-component{% endif %}>


          {%- if section.settings.show_view_all and section.settings.collection_3.products.size > section.settings.columns_desktop -%}
            <div class="center collection-list-view-all">
              <a
                {% comment %}href="{{ routes.collections_url }}"{% endcomment %}
                href="{{ section.settings.collection_3.url }}"
                class="{% if section.settings.button_style == 'link' or section.settings.button_style == 'full-unstyled-link' %}{{ section.settings.button_style }}{% if section.settings.button_style == 'link' %} animate-arrow{% endif %}{% else %}button {{ section.settings.button_style }}{% endif %} button--small"
                id="ViewAllButton-{{ section.id }}-3"
                aria-labelledby="ViewAllButton-{{ section.id }}-3 SectionHeading-{{ section.id }}"
              >
                {{- 'sections.collection_list.view_all' | t -}}
              </a>
            </div>
          {%- endif -%}
        </div>
      {% endif %}

    </lds-tabs>
  </div>
</div>

