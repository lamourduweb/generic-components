{% render 'breadcrumb',
  color_scheme: section.settings.color_scheme,
  class: class,
  hide_current: section.settings.hide_current,
  container = section.settings.full_width,
  justify = section.settings.title_alignment
%}

{% schema %}
{
  "name": "t:sections.breadcrumb.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "t:sections.all.full_width.label"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "options": [
        {
          "value": "start",
          "label": "t:sections.all.title_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.all.title_alignment.options__2.label"
        }
      ],
      "default": "start",
      "label": "t:sections.all.title_alignment.label"
    },
    {
      "type": "checkbox",
      "id": "hide_current",
      "label": "Cacher la page actuelle",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Cacher sur mobile",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 12
    }
  ],
  "disabled_on": {
    "templates": ["index", "cart", "list-collections", "404", "password"],
    "groups": ["header","footer"]
  },
  "presets": [
    {
      "name": "t:sections.breadcrumb.presets.name"
    }
  ]
}
{% endschema %}
