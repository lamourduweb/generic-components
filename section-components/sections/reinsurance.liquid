{{ 'lds-component-reinsurance.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .footer-reinsurances {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer-reinsurances {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{%- if section.settings.reinsurances_enable -%}
<div class="footer-reinsurances color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {{ 'component-reinsurance.css' | asset_url | stylesheet_tag }}
  <div class="page-width{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %} reinsurance--content-align-{{ section.settings.text_alignment }} reinsurance--flex-{{ section.settings.box_direction }}">
    <div class="grid grid--2-col grid--4-col-tablet grid--4-col-desktop">
      <div class="reinsurance grid__item">
        {%- if settings.link_reinsurance_1 != blank -%}
        <a href="{{ section.settings.link_reinsurance_1 }}" class="reinsurance_box{% if section.settings.show_text_box == true %} content-container color-{{ section.settings.color_scheme_text_box }} gradient{% endif %} text--{{ section.settings.text_alignment }} full-unstyled-link">
        {%- else -%}
        <div class="reinsurance_box{% if section.settings.show_text_box == true %} content-container color-{{ section.settings.color_scheme_text_box }} gradient{% endif %}">
        {%- endif -%}
          <div class="reinsurance__img-content">
            {{ settings.icon_reinsurance_1 | img_url: '40x', scale: 2 | img_tag: settings.text_reinsurance_1, 'reinsurance__icon' }}
          </div>
          <div class="reinsurance__text-content">
            {{ settings.text_reinsurance_1 }}
          </div>
        {%- if settings.link_reinsurance_1 != blank -%}
        </a>
        {%- else -%}
        </div>
        {%- endif -%}
      </div>
      <div class="reinsurance grid__item">
        {%- if settings.link_reinsurance_2 != blank -%}
        <a href="{{ section.settings.link_reinsurance_2 }}" class="reinsurance_box{% if section.settings.show_text_box == true %} content-container color-{{ section.settings.color_scheme_text_box }} gradient{% endif %} text--{{ section.settings.text_alignment }} full-unstyled-link">
        {%- else -%}
        <div class="reinsurance_box{% if section.settings.show_text_box == true %} content-container color-{{ section.settings.color_scheme_text_box }} gradient{% endif %}">
        {%- endif -%}
          <div class="reinsurance__img-content">
            {{ settings.icon_reinsurance_2 | img_url: '40x', scale: 2 | img_tag: settings.text_reinsurance_2, 'reinsurance__icon' }}
          </div>
          <div class="reinsurance__text-content">
            {{ settings.text_reinsurance_2 }}
          </div>
        {%- if settings.link_reinsurance_2 != blank -%}
        </a>
        {%- else -%}
        </div>
        {%- endif -%}
      </div>
      <div class="reinsurance grid__item">
        {%- if settings.link_reinsurance_3 != blank -%}
        <a href="{{ section.settings.link_reinsurance_3 }}" class="reinsurance_box{% if section.settings.show_text_box == true %} content-container color-{{ section.settings.color_scheme_text_box }} gradient{% endif %} text--{{ section.settings.text_alignment }} full-unstyled-link">
        {%- else -%}
        <div class="reinsurance_box{% if section.settings.show_text_box == true %} content-container color-{{ section.settings.color_scheme_text_box }} gradient{% endif %}">
        {%- endif -%}
          <div class="reinsurance__img-content">
            {{ settings.icon_reinsurance_3 | img_url: '40x', scale: 2 | img_tag: settings.text_reinsurance_3, 'reinsurance__icon' }}
          </div>
          <div class="reinsurance__text-content">
            {{ settings.text_reinsurance_3 }}
          </div>
        {%- if settings.link_reinsurance_3 != blank -%}
        </a>
        {%- else -%}
        </div>
        {%- endif -%}
      </div>
      <div class="reinsurance grid__item">
        {%- if settings.link_reinsurance_4 != blank -%}
        <a href="{{ section.settings.link_reinsurance_4 }}" class="reinsurance_box{% if section.settings.show_text_box == true %} content-container color-{{ section.settings.color_scheme_text_box }} gradient{% endif %} text--{{ section.settings.text_alignment }} full-unstyled-link">
        {%- else -%}
        <div class="reinsurance_box{% if section.settings.show_text_box == true %} content-container color-{{ section.settings.color_scheme_text_box }} gradient{% endif %}">
        {%- endif -%}
          <div class="reinsurance__img-content">
            {{ settings.icon_reinsurance_4 | img_url: '40x', scale: 2 | img_tag: settings.text_reinsurance_4, 'reinsurance__icon' }}
          </div>
          <div class="reinsurance__text-content">
            {{ settings.text_reinsurance_4 }}
          </div>
        {%- if settings.link_reinsurance_4 != blank -%}
        </a>
        {%- else -%}
        </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{%- endif -%}

