{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .lds-columns-custom .breadcrumbs {
    padding-top: 12px;
    padding-bottom: 12px;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .lds-columns-custom  .multicolumn-card__content:not(.has-image) {
    display: flex;
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: start;
  }
  .lds-columns-custom  .multicolumn-card__content.has-image:not(.has_background_image) {
    margin-top: 3rem;
  }
  .lds-columns-custom  .multicolumn-card__content.has-breadcrumb {
    padding-bottom: 4.5rem;
  }
  .lds-columns-custom  .multicolumn-card__content.content-align-center {
    justify-content: center !important;
  }
  .lds-columns-custom  .multicolumn-card__content.content-align-bottom {
    justify-content: end !important;
  }

  .lds-columns-custom  .multicolumn-card__image-wrapper.has_background_image + .multicolumn-card__content {
    display: flex;
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: start;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
  
  .lds-columns-custom  .multicolumn-card__image-wrapper.has_background_image {
    position: relative;
    z-index: 1;
  }

  .lds-columns-custom .globo-form .globo-form-app,
  .lds-columns-custom .multicolumn-card__page_content {
    margin-left: auto;
    margin-right: auto;
  }

  .lds-columns-custom .globo-form .globo-form-app {
    max-width: 100% !important;
  }

  .lds-columns-custom.multicolumn .multicolumn-card.multicolumn-card_image  {
    background: rgb(var(--color-background));
    height: 100%;
  }
  .lds-columns-custom.multicolumn .multicolumn-card.multicolumn-card_image *:not(.breadcrumbs)  {
    height: 100%;
  }
  .lds-columns-custom.multicolumn .multicolumn-card_image .multicolumn-card__image-wrapper {
    margin-left: 0;
    margin-right: 0;
  }
  .lds-columns-custom.multicolumn .multicolumn-card_image .breadcrumbs {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
  }
  .lds-columns-custom .multicolumn-card__info>:nth-child(3){
    margin-top: 1rem;
  }
  
  @media screen and (min-width: 990px) {

    .grid--custom .grid__item.grid--1-col-desktop {
      width: calc(8.33% - var(--grid-desktop-horizontal-spacing) * 1 / 12);
      max-width: calc(8.33% - var(--grid-desktop-horizontal-spacing) * 1 / 12);
    }
      
    .grid--custom .grid__item.grid--2-col-desktop {
      width: calc(16.66% - var(--grid-desktop-horizontal-spacing) * 2 / 12);
      max-width: calc(16.66% - var(--grid-desktop-horizontal-spacing) * 2 / 12);
    }
  
    .grid--custom .grid__item.grid--3-col-desktop {
      width: calc(25% - var(--grid-desktop-horizontal-spacing) * 3 / 12);
      max-width: calc(25% - var(--grid-desktop-horizontal-spacing) * 3 / 12);
    }
      
    .grid--custom .grid__item.grid--4-col-desktop {
      width: calc(33.33% - var(--grid-desktop-horizontal-spacing) * 4 / 12);
      max-width: calc(33.33% - var(--grid-desktop-horizontal-spacing) * 4 / 12);
    }
  
    .grid--custom .grid__item.grid--5-col-desktop {
      width: calc(41.66% - var(--grid-desktop-horizontal-spacing) * 5 / 12);
      max-width: calc(41.66% - var(--grid-desktop-horizontal-spacing) *  / 12);
    }
      
    .grid--custom .grid__item.grid--6-col-desktop {
      width: calc(50% - var(--grid-desktop-horizontal-spacing) * 6 / 12);
      max-width: calc(50% - var(--grid-desktop-horizontal-spacing) * 6 / 12);
    }
  
    .grid--custom .grid__item.grid--7-col-desktop {
      width:  calc(58.33% - var(--grid-desktop-horizontal-spacing) * 7 / 12);
      max-width:  calc(58.33%- var(--grid-desktop-horizontal-spacing) * 7 / 12);
    }
      
    .grid--custom .grid__item.grid--8-col-desktop {
      width: calc(66.66% - var(--grid-desktop-horizontal-spacing) * 8 / 12);
      max-width: calc(66.66% - var(--grid-desktop-horizontal-spacing) * 8 / 12);
    }
      
    .grid--custom .grid__item.grid--9-col-desktop {
      width: calc(75% - var(--grid-desktop-horizontal-spacing) * 9 / 12);
      max-width: calc(75% - var(--grid-desktop-horizontal-spacing) * 9 / 12);
    }
  
    .grid--custom .grid__item.grid--10-col-desktop {
      width: calc(83.33% - var(--grid-desktop-horizontal-spacing) * 10 / 12);
      max-width: calc(83.33% - var(--grid-desktop-horizontal-spacing) * 10 / 12);
    }
      
    .grid--custom .grid__item.grid--11-col-desktop {
      width: calc(91.66% - var(--grid-desktop-horizontal-spacing) * 11 / 12);
      max-width: calc(91.66% - var(--grid-desktop-horizontal-spacing) * 11 / 12);
    }
  
    .grid--custom .grid__item.grid--12-col-desktop {
      width:  calc(100% - var(--grid-desktop-horizontal-spacing));
      max-width:  calc(100%- var(--grid-desktop-horizontal-spacing));
    }
  }

  @media screen and (min-width: 750px) {
    .lds-columns-custom .breadcrumbs nav,
    .lds-columns-custom .multicolumn-list:not(.grid--1-col-desktop) .multicolumn-card__info {
      max-width: 60rem;
      margin: 0 auto;
      padding-left: 0;
      padding-right: 0;
    }
    .lds-columns-custom .multicolumn-card_column,
    .lds-columns-custom .multicolumn-card_page{
      padding: 0 5rem;
    }
    
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  @media screen and (max-width: 749px) {
    .lds-columns-custom .multicolumn-card_column,
    .lds-columns-custom .multicolumn-card_page{
      padding-left: 2rem;
      padding-right: 2rem;
    }
    .lds-columns-custom .multicolumn-card_column .multicolumn-card__info {
      padding-left: 0;
      padding-right: 0;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="lds-columns-custom {{ section.settings.section_css_class }} multicolumn color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div
    class="{% unless section.settings.full_width %}page-width{% endunless %} section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <slider-component class="slider-mobile-gutter">
      <ul
        class="multicolumn-list contains-content-container grid grid--custom grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--mobile grid--peek{% endif %}{% if section.settings.no_spacing %} grid--no-gap{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          {%- assign empty_column = '' -%}
          {%- case block.type -%}
            {%- when 'column' -%}
            {%- if block.settings.image == blank
                and block.settings.title == blank
                and block.settings.caption == blank
                and block.settings.text == blank
                and block.settings.link_label == blank
              -%}
                {%- assign empty_column = ' multicolumn-list__item--empty' -%}
              {%- endif -%}
            {%- when 'image' -%}
              {%- if block.settings.image == blank-%}
                {%- assign empty_column = ' multicolumn-list__item--empty' -%}
              {%- endif -%}
            {%- when 'page_content' -%}
              {%- if block.settings.page == blank -%}
                {%- assign empty_column = ' multicolumn-list__item--empty' -%}
              {%- endif -%}
            {%- when 'custom_liquid' -%}
              {%- if block.settings.custom_liquid == blank-%}
                {%- assign empty_column = ' multicolumn-list__item--empty' -%}
              {%- endif -%}
          {%- endcase -%}
          
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{{ empty_column }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}
                  {%- case block.type -%}
                  {%- when 'column' -%}
                    grid--{{ block.settings.columns_desktop }}-col-desktop color-{{ block.settings.color_scheme }} gradient
                  {%- when 'image' -%}
                    grid--{{ block.settings.columns_desktop }}-col-desktop color-{{ block.settings.color_scheme }} gradient
                  {%- when 'page_content' -%}
                    grid--{{ block.settings.columns_desktop }}-col-desktop color-{{ block.settings.color_scheme }} gradient
                  {%- when 'custom_liquid' -%}
                    grid--{{ block.settings.columns_desktop }}-col-desktop color-{{ block.settings.color_scheme }} gradient
                  {%- when '@app' -%}
                    grid--{{ block.settings.columns_desktop }}-col-desktop color-{{ block.settings.color_scheme }} gradient
                  {%- endcase -%}
                  "
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {%- case block.type -%}
              {%- when 'image' -%}
              <div class="multicolumn-card multicolumn-card_image content-container">
                {%- if block.settings.image != blank -%}
                  {% if block.settings.image_ratio == 'adapt' or block.settings.image_ratio == 'circle' %}
                    {% assign spaced_image = true %}
                  {% endif %}
                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ block.settings.image_width }}-width">
                    <div
                      class="banner__media media media--transparent media--{{ block.settings.image_ratio }}"
                      {% if block.settings.image_ratio == 'adapt' %}
                        style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                      {% endif %}
                    >
                      {%- liquid
                        assign number_of_columns = section.settings.columns_desktop
                        assign number_of_columns_mobile = section.settings.columns_mobile
                        assign grid_space_desktop = number_of_columns | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                        assign grid_space_tablet = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                        assign grid_space_mobile = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | divided_by: 2 | plus: 30 | append: 'px'
                        if block.settings.image_width == 'half'
                          assign image_width = 0.5
                        elsif block.settings.image_width == 'third'
                          assign image_width = 0.33
                        else
                          assign image_width = 1
                        endif
                      -%}
                      {% capture sizes %}
                        (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ grid_space_desktop }}) * {{ image_width }} /  {{ number_of_columns }}),
                        (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) * {{ image_width }} / {{ number_of_columns }}),
                        (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) * {{ image_width }} / {{ number_of_columns_mobile }}),
                        calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                      {% endcapture %}
                      {{
                        block.settings.image
                        | image_url: width: 3200
                        | image_tag:
                          widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                          sizes: sizes,
                          class: 'multicolumn-card__image img-cover'
                      }}
                    </div>
                  </div>
                  {%- else -%}
                    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg img-cover' }}
                  {%- endif -%}
              </div>
              {%- when 'column' -%}
              <div class="multicolumn-card multicolumn-card_column content-container">
              {%- if block.settings.enable_breadcrumb -%}
                  {% render 'breadcrumb',
                    class: class,
                    hide_current: false,
                    container = false,
                    justify = 'start'
                  %}
                {%- endif -%}
                {%- if block.settings.image != blank -%}
                  {% if block.settings.image_ratio == 'adapt' or block.settings.image_ratio == 'circle' %}
                    {% assign spaced_image = true %}
                  {% endif %}
                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ block.settings.image_width }}-width{% if block.settings.background_image %} has_background_image{% endif %}{% unless block.settings.no_spacing_image %}{% if block.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}{% endunless %}">
                    <div
                      class="media media--transparent media--{{ block.settings.image_ratio }}"
                      {% if block.settings.image_ratio == 'adapt' %}
                        style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                      {% endif %}
                    >
                      {%- liquid
                        assign number_of_columns = section.settings.columns_desktop
                        assign number_of_columns_mobile = section.settings.columns_mobile
                        assign grid_space_desktop = number_of_columns | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                        assign grid_space_tablet = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                        assign grid_space_mobile = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | divided_by: 2 | plus: 30 | append: 'px'
                        if block.settings.image_width == 'half'
                          assign image_width = 0.5
                        elsif block.settings.image_width == 'third'
                          assign image_width = 0.33
                        else
                          assign image_width = 1
                        endif
                      -%}
                      {% capture sizes %}
                        (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ grid_space_desktop }}) * {{ image_width }} /  {{ number_of_columns }}),
                        (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) * {{ image_width }} / {{ number_of_columns }}),
                        (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) * {{ image_width }} / {{ number_of_columns_mobile }}),
                        calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                      {% endcapture %}
                      {{
                        block.settings.image
                        | image_url: width: 3200
                        | image_tag:
                          widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                          sizes: sizes,
                          class: 'multicolumn-card__image'
                      }}
                    </div>
                  </div>
                {%- endif -%}
                <div class="multicolumn-card__content{% if block.settings.background_image %} has_background_image{% endif %}{% if block.settings.image != blank %} has-image{% endif %}{% if block.settings.enable_breadcrumb %} has-breadcrumb{% endif %} content-align-{{ block.settings.content_alignment }}{% if block.settings.column_alignment == 'center' %} center{% endif %}"
                     {% if block.settings.background_image %}style="background: rgba(0,0,0,{{ block.settings.image_overlay_opacity | divided_by: 100.0 }});"{% endif %}
                >
                  <div class="multicolumn-card__info">
                    {%- if block.settings.title != blank -%}
                      <{{ block.settings.heading_html }} class="inline-richtext {{ block.settings.heading_size_hn }}">{{ block.settings.title | replace: "  ", "<br>" }}</{{ block.settings.heading_html }}>
                    {%- endif -%}
                    {%- if block.settings.caption != blank -%}
                    <p
                      class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {{ block.shopify_attributes }}
                      {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ forloop.index }};"
                      {% endif %}
                    >
                      {{ block.settings.caption | escape }}
                    </p>
                    {%- endif -%}
                    {%- if block.settings.text != blank -%}
                      <div class="rte">{{ block.settings.text }}</div>
                    {%- endif -%}
                    {%- if block.settings.link_label != blank -%}
                      <a
                        class="{% if block.settings.button_style != 'link' or block.settings.button_style != 'full-unstyled-link' %}button {% if block.settings.button_style == 'button--tertiary' %} button--text{% endif %}{% endif %}{% if block.settings.button_style == 'link' %} animate-arrow{% endif %} {{ block.settings.button_style }}"
                        {% if block.settings.link == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block.settings.link }}"
                        {% endif %}
                      >
                        {{- block.settings.link_label | escape -}}
                      {%- if block.settings.button_style == 'link' -%}
                        <span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span>
                      {%- endif -%}
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
              {%- when 'page_content' -%}
              <div class="multicolumn-card multicolumn-card_page content-container">
                {%- if block.settings.enable_breadcrumb -%}
                  {% render 'breadcrumb',
                    class: class,
                    hide_current: false,
                    container = false,
                    justify = 'start'
                  %}
                {%- endif -%}
                <div class="multicolumn-card__content{% if block.settings.enable_breadcrumb %} has-breadcrumb{% endif %} content-align-{{ block.settings.content_alignment }}{% if block.settings.column_alignment == 'center' %} center{% endif %}">
                  <div class="multicolumn-card__info multicolumn-card__page_content">
                    {%- if block.settings.page.content != blank -%}
                      {{ block.settings.page.content }}
                    {%- endif -%}
                    {%- if block.settings.link_label != blank -%}
                      <a
                        class="{% if block.settings.button_style != 'link' or block.settings.button_style != 'full-unstyled-link' %}button {% if block.settings.button_style == 'button--tertiary' %} button--text{% endif %}{% endif %}{% if block.settings.button_style == 'link' %} animate-arrow{% endif %} {{ block.settings.button_style }}"
                        {% if block.settings.link == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block.settings.link }}"
                        {% endif %}
                      >
                        {{- block.settings.link_label | escape -}}
                      {%- if block.settings.button_style == 'link' -%}
                        <span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span>
                      {%- endif -%}
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
              {%- when 'custom_liquid' -%}
              <div class="multicolumn-card multicolumn-card_custom content-container">
                {%- if block.settings.enable_breadcrumb -%}
                  {% render 'breadcrumb',
                    class: class,
                    hide_current: false,
                    container = false,
                    justify = 'start'
                  %}
                {%- endif -%}
                <div class="multicolumn-card__content{% if block.settings.enable_breadcrumb %} has-breadcrumb{% endif %} content-align-{{ block.settings.content_alignment }}{% if block.settings.column_alignment == 'center' %} center{% endif %}">
                   <div class="multicolumn-card__info">
                    {%- if section.settings.title != blank and block.settings.view_title -%}
                      <div class="title-wrapper">
                        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
                          {{ section.settings.title }}
                        </h2>
                      </div>
                    {%- endif -%}
                    {{ block.settings.custom_liquid }}
                 </div>
                </div>
              </div>
              {%- when '@app' -%}
              <div  class="multicolumn-card multicolumn-card_app content-container">
                 {% render block %}
              </div>
            {%- endcase -%}
          </li>
        {%- endfor -%}
      </ul>

      {%- if show_mobile_slider -%}
        <div class="slider-buttons no-js-hidden medium-hide">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.lds-columns-custom.name",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 2,
      "label": "t:sections.multicolumn.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "background_style",
      "options": [
        {
          "value": "none",
          "label": "t:sections.multicolumn.settings.background_style.options__1.label"
        },
        {
          "value": "primary",
          "label": "t:sections.multicolumn.settings.background_style.options__2.label"
        }
      ],
      "default": "primary",
      "label": "t:sections.multicolumn.settings.background_style.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "checkbox",
      "id": "no_spacing",
      "default": true,
      "label": "t:sections.all.no_spacing.label"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.rich-text.settings.full_width.label"
    },
    {
      "type": "header",
      "content": "t:sections.multicolumn.settings.header_mobile.content"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.multicolumn.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.multicolumn.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "1",
      "label": "t:sections.multicolumn.settings.columns_mobile.label"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.multicolumn.settings.swipe_on_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
