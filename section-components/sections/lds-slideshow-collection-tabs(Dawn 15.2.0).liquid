{%- style -%}
  .lds-tabs__links {
    position: relative;
    display: flex;
    justify-content: center;
    list-style-type: none;
    gap: 2rem;
    overflow-y: scroll;
    scrollbar-width: none;
    -ms-overflow-style: none; // IE 10+
    overflow: -moz-scrollbars-none; // Firefox
  }
  .lds-tabs__links.left {
    justify-content: flex-start;
  }
  .lds-tabs__links.right {
    justify-content: flex-end;
  }
  .lds-tabs__links::-webkit-scrollbar {
    display: none;
    width: 0 !important
  }
  .lds-tabs__links >*:only-child {
    display: none;
  }
  
  lds-tabs .lds-tab__content {
    display: none;
    margin-top: 2rem;
  }
  lds-tabs .lds-tab__content.active {
    display: block;
  }
  
  .lds-tabs__links li:not(.active) .button--underline::after {
    transform: scaleX(0);
  }
  .lds-tabs__links li:not(.active) .button--underline:hover::after,
  .lds-tabs__links li:not(.active) .button--underline:focus::after,
  .lds-tabs__links li.active .button--underline::after {
    transform: scaleX(1);
  }
  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  @media screen and (min-width: 990px) {
    .lds-slideshow-list.list-tabs .title-wrapper-with-link {
      margin-bottom: 0;
    }
    .lds-slideshow-list.list-tabs .collection-list-view-all {
      position: absolute;
      right: 0;
      top: {{ section.settings.padding_bottom }}px;
      margin: 0 5rem;
    }
  }
{%- endstyle -%}

{%- liquid
  assign products_to_display_1 = section.settings.collection_1.all_products_count
  assign products_to_display_2 = section.settings.collection_2.all_products_count
  assign products_to_display_3 = section.settings.collection_3.all_products_count
   
  if section.settings.collection_1.all_products_count > section.settings.products_to_show
    assign products_to_display_1 = section.settings.products_to_show
    assign more_in_collection = true
  elsif section.settings.collection_2.all_products_count > section.settings.products_to_show
    assign products_to_display_2 = section.settings.products_to_show
    assign more_in_collection = true
  elsif section.settings.collection_3.all_products_count > section.settings.products_to_show
    assign products_to_display_3 = section.settings.products_to_show
    assign more_in_collection = true
  endif

  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and products_to_display_1 > columns_mobile_int
    assign show_mobile_slider = true
  elsif section.settings.swipe_on_mobile and products_to_display_2 > columns_mobile_int
    assign show_mobile_slider = true
  elsif section.settings.swipe_on_mobile and products_to_display_3 > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and products_to_display_1 > section.settings.columns_desktop
    assign show_desktop_slider = true
  elsif section.settings.enable_desktop_slider and products_to_display_2 > section.settings.columns_desktop
    assign show_desktop_slider = true
  elsif section.settings.enable_desktop_slider and products_to_display_3 > section.settings.columns_desktop
    assign show_desktop_slider = true
  endif
-%}

