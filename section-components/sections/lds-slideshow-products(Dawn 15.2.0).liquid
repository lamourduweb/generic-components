{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .lds-slideshow-list .product-list-wrapper--grid .slider-mobile-gutter,
  .lds-slideshow-list .product-list-wrapper--grid .slider-mobile-gutter .slideshow-list.product-list {
    padding-bottom: 0;
  }
  .title__column-sticky {
    margin: 0;
  }
  .title-wrapper-with-hero {
    border-radius: var(--product-card-corner-radius);
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: start;
    padding: 10rem 3rem 4rem;
    margin: 0 0 var(--grid-mobile-vertical-spacing);
  }
  .title-wrapper-with-hero .collection-hero {
    position: absolute;
    top: 0; 
    left: 0;
    right: 0; 
    bottom: 0;
    z-index: 0;
  }
  .title-wrapper-with-hero > *:not(.collection-hero) {
    position: relative;
    z-index: 1;
  }
  .title-wrapper-with-hero .collection-view-all {
    margin-top: 1.5rem;
  }
  @media screen and (min-width: 990px) {
    .lds-slideshow-list .product-list-wrapper--grid {
      display: grid;
      column-gap: var(--grid-desktop-horizontal-spacing);
      row-gap: var(--grid-desktop-vertical-spacing);
    }
    .title__column-sticky {
      flex-direction: column;
      justify-content: flex-start;
    }
    .title__column-sticky .title-wrapper-with-hero {
      position: sticky;
      top: var(--grid-desktop-vertical-spacing);
      height: 100%;
      max-height: calc(100vh - var(--grid-desktop-vertical-spacing)* 2);
      margin: 0;
      z-index: 2;
      display: flex;
      align-items: start;
      justify-content: end;
    }
    .is-grid--2-col-desktop{
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .product-list-wrapper--grid-reverse .title-wrapper-with-hero {
      order: 2;
    }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and section.blocks.size > section.settings.columns_desktop
    assign show_desktop_slider = true
  endif

  for block in section.blocks
    case block.type
      when 'featured_collection'
        assign has_featured_collection = true
    endcase
  endfor
-%}

<div class="{{ section.settings.css_class }} color-{{ section.settings.color_scheme }} gradient">
  <div class="product-list-wrapper{% if section.settings.full_width %} list-wrapper--full-width{% else %} page-width{% if show_mobile_slider %} page-width-desktop{% endif %}{% endif %} isolate{% if section.settings.collection_hero_layout != "none" and section.settings.collection != blank %} product-list-wrapper--grid is-grid--2-col-desktop{% if section.settings.collection_hero_layout == "half-right" %} product-list-wrapper--grid-reverse{% endif %}{% endif %}{% if section.settings.title == blank or section.settings.collection_hero_layout != "none" %} no-heading{% endif %}{% if section.settings.show_view_all == false or section.blocks.size > collections.size %} no-mobile-link{% endif %} section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      {% if section.settings.full_width %}<div class="page-width">{% endif %}
        <div class="title-wrapper{% if section.settings.collection_hero_layout != "none" and section.settings.collection != blank %} title__column-sticky{% endif %}{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin{% if section.settings.show_view_all and section.blocks.size > section.settings.columns_desktop %} title-wrapper-with-link{% endif %}">
        {%- if section.settings.collection_hero_layout != "none" and section.settings.collection != blank -%}
          <div class="title-wrapper-with-hero color-{{ section.settings.hero_color_scheme }} gradient">
            <div>
              {% if section.settings.title != section.settings.collection.title %}
                <span class="h5">
                  {{ section.settings.collection.title | escape }}
                </span>
              {% endif %}
              <h2
                id="SectionHeading-{{ section.id }}"
                class="product-list-title inline-richtext {{ section.settings.heading_size }}"
              >
                {{ section.settings.title }}
              </h2>
              {%- if section.settings.description != blank -%}
                <div class="collection__description {{ section.settings.description_style }} rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                  {{ section.settings.description -}}
                </div>
              {%- endif -%}
            </div>
            {%- if section.settings.show_view_all and section.blocks.size > section.settings.columns_desktop -%}
              <div class="collection-view-all">
                <a
                  href="{{ section.settings.collection.url | default: routes.all_products_collection_url }}"
                  class="{% if section.settings.view_all_style == 'link' or section.settings.view_all_style == 'full-unstyled-link' %}{{ section.settings.view_all_style }}{% if section.settings.view_all_style == 'link' %} animate-arrow{% endif %}{% else %}button {{ section.settings.view_all_style }}{% endif %} button--small"
                  id="ViewAllButton-{{ section.id }}"
                  aria-labelledby="ViewAllButton-{{ section.id }} SectionHeading-{{ section.id }}"
                >
                  {% if section.settings.view_all_label != blank %}
                    {{ section.settings.view_all_label | escape }}
                  {% else %}
                    {{- 'sections.collection_list.view_all' | t -}}
                  {% endif %}
                </a>
              </div>
            {%- endif -%}
            <div class="collection-hero media">
              {% if section.settings.image != blank %}
                {% assign collection_hero = section.settings.image %}
              {% else %}
                {% assign collection_hero = section.settings.collection.image %}
              {% endif %}
              <img
                srcset="
                  {%- if collection_hero.width >= 165 -%}{{ collection_hero | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if collection_hero.width >= 360 -%}{{ collection_hero | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if collection_hero.width >= 535 -%}{{ collection_hero | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if collection_hero.width >= 750 -%}{{ collection_hero | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if collection_hero.width >= 1070 -%}{{ collection_hero | image_url: width: 1070 }} 1070w,{%- endif -%}
                  {%- if collection_hero.width >= 1500 -%}{{ collection_hero | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ collection_hero | image_url }} {{ collection_hero.width }}w
                "
                src="{{ collection_hero | image_url: width: 750 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc(50vw - 130px), calc(50vw - 55px)"
                alt="{{ collection_hero.alt | escape }}"
                width="{{ collection_hero.width }}"
                height="{{ collection_hero.height }}"
              >
            </div>
          </div>
        {%- else -%}
          <div>
            <h2
              id="SectionHeading-{{ section.id }}"
              class="product-list-title inline-richtext {{ section.settings.heading_size }}"
            >
              {{ section.settings.title }}
            </h2>
            {%- if section.settings.description != blank -%}
              <div class="collection__description {{ section.settings.description_style }} rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                {{ section.settings.description -}}
              </div>
            {%- endif -%}
          </div>
          {% unless has_featured_collection %}
            {%- if section.settings.show_view_all and section.blocks.size > section.settings.columns_desktop -%}
              <a
                href="{{ section.settings.collection.url | default: routes.all_products_collection_url }}"
                class="small-hide {% if section.settings.view_all_style == 'link' or section.settings.view_all_style == 'full-unstyled-link' %}{{ section.settings.view_all_style }}{% if section.settings.view_all_style == 'link' %} animate-arrow{% endif %}{% else %}button {{ section.settings.view_all_style }}{% endif %} button--small"
                id="ViewAllButton-{{ section.id }}"
                aria-labelledby="ViewAllButton-{{ section.id }} SectionHeading-{{ section.id }}"
              >
                {% if section.settings.view_all_label != blank %}
                  {{ section.settings.view_all_label | escape }}
                {% else %}
                  {{- 'sections.collection_list.view_all' | t -}}
                {% endif %}
              </a>
            {%- endif -%}
          {%- endunless -%}
        {%- endif -%}
      </div>
      {% if section.settings.full_width %}</div>{% endif %}
    {%- endunless -%}

    <{% if section.settings.slider_visual == 'dots' or section.settings.slider_visual == 'numbers' %}slideshow-component{% else %}slider-component{% endif %} class="slider-mobile-gutter{% if section.settings.full_width %} component-full-width{% endif %}{% if show_mobile_slider == false %} page-width{% endif %}{% if show_desktop_slider == false and section.settings.full_width == false %} page-width-desktop{% endif %}{% if show_desktop_slider %} component-desktop{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <ul
        class="slideshow-list product-list contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_tablet }}-col-tablet grid--{{ section.settings.columns_mobile }}-col-tablet-down {% if section.settings.columns_desktop == 1 %} grid--full-width grid--{{ section.settings.columns_desktop }}-col-desktop{% else %} grid--{{ section.settings.columns_desktop }}-col-desktop{% endif %}{% if section.settings.swipe_on_mobile or show_desktop_slider %} lds-slideshow slideshow slider {% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %} collection-list--{{ section.blocks.size }}-items"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign columns = section.blocks.size
          if columns > 3
            assign columns = 3
          endif
        -%}
        {%- for block in section.blocks limit: section.settings.products_to_show -%}
          {%- case block.type -%}
            {%- when 'featured_collection' -%}
              <li
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                class="collection-list__item grid__item{% if show_mobile_slider or show_desktop_slider %} slideshow__slide slider__slide{% endif %}{% if block.settings.collection.featured_image == nil %} collection-list__item--no-media{% endif %}"
                {{ block.shopify_attributes }}
                {%- if section.settings.swipe_on_mobile or show_desktop_slider and section.settings.auto_rotate -%}
                  role="group"
                  aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
                  aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                  tabindex="-1"
                {%- endif -%}
              >
                {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
                {% render 'lds-card-featured-collection',
                  card_collection: block.settings.collection,
                  collection_hero: section.settings.image,
                  media_aspect_ratio: section.settings.image_ratio,
                  placeholder_image: placeholder_image,
                  collection_title_hero: block.settings.title, 
                  heading_html: block.settings.heading_html, 
                  heading_size_hn: block.settings.heading_size_hn,
                  view_all_style: section.settings.view_all_style,
                  view_all_label: section.settings.view_all_label,
                  columns: columns
                %}
              </li>
            {%- when 'featured_product' -%}
              <li
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                class="collection-list__item grid__item{% if show_mobile_slider or show_desktop_slider %} slideshow__slide slider__slide{% endif %}{% if block.settings.collection.featured_image == nil %} collection-list__item--no-media{% endif %}"
                {{ block.shopify_attributes }}
                {%- if section.settings.swipe_on_mobile or show_desktop_slider and section.settings.auto_rotate -%}
                  role="group"
                  aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
                  aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                  tabindex="-1"
                {%- endif -%}
              >
                {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                {% render 'card-product',
                  card_product:  block.settings.product,
                  media_aspect_ratio: section.settings.image_ratio,
                  image_shape: section.settings.image_shape,
                  show_secondary_image: section.settings.show_secondary_image,
                  show_vendor: section.settings.show_vendor,
                  show_rating: section.settings.show_rating,
                  show_quick_add: section.settings.enable_quick_add,
                  section_id: section.id
                %}
              </li>
          {%- endcase -%}
        {%- endfor -%}
      </ul>
      {%- if show_mobile_slider or show_desktop_slider -%}
        <div class="slider-buttons no-js-hidden{% if section.settings.slider_visual == 'arrows' %} sticky-slider-buttons{% endif %}">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          {% if section.settings.slider_visual != 'arrows'%}
            <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
              {%- if section.settings.slider_visual == 'counter' -%}
                  <span class="slider-counter--current">1</span>
                  <span aria-hidden="true"> / </span>
                  <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                  <span class="slider-counter--total">{{ section.blocks.size }}</span>
              {%- else -%}
                {%- liquid
                  assign product_size = section.blocks.size
                  assign columns_desktop = section.settings.columns_desktop
                  assign columns_tablet = section.settings.columns_tablet
                  assign columns_mobile = section.settings.columns_mobile
                  assign limit_to_show = section.settings.products_to_show
                  
                  if product_size >= limit_to_show
                    assign dot_count_desktop = limit_to_show | minus: columns_desktop | plus: 1
                    if columns_tablet == '3' and columns_mobile == '1'
                      assign dot_count_desktop = limit_to_show | minus: columns_desktop | plus: 1
                      assign dot_count_tablet  = product_size | minus: columns_tablet | minus: 3 
                      assign dot_count_mobile  = product_size | minus: columns_desktop | minus: columns_tablet | plus: 1
                    elsif columns_tablet == '3' and columns_mobile == '2'
                      assign dot_count_desktop = limit_to_show | minus: columns_desktop| plus: 1
                      assign dot_count_tablet  = product_size | minus: columns_tablet | minus: 3
                      assign dot_count_mobile  = product_size | minus: columns_desktop | minus: columns_tablet
                    elsif columns_tablet == '2' and columns_mobile == '2'
                      assign dot_count_desktop = limit_to_show | minus: columns_desktop | plus: 1
                      assign dot_count_tablet  = product_size | minus: columns_desktop | minus: columns_tablet
                      assign dot_count_mobile  = product_size | minus: columns_desktop | minus: columns_tablet | minus: 3
                    elsif columns_tablet == '2' and columns_mobile == '1'
                      assign dot_count_desktop = limit_to_show | minus: columns_desktop | plus: 1
                      assign dot_count_tablet  = product_size | minus: columns_desktop | minus: columns_tablet 
                      assign dot_count_mobile  = product_size | minus: columns_desktop | minus: columns_tablet | minus: 1
                    endif
                  else
                    assign dot_count_desktop = product_size | minus: columns_desktop | plus: 1
                    if columns_tablet == '3' and columns_mobile == '1'
                      assign dot_count_desktop = product_size | minus: columns_desktop | plus: 1
                      assign dot_count_tablet  = product_size | minus: columns_tablet | minus: 3
                      assign dot_count_mobile  = product_size | minus: columns_desktop | minus: columns_tablet | plus: 1
                    elsif columns_tablet == '3' and columns_mobile == '2'
                      assign dot_count_desktop = product_size | minus: columns_desktop | plus: 1
                      assign dot_count_tablet  = product_size | minus: columns_tablet | minus: 3
                      assign dot_count_mobile  = product_size | minus: columns_desktop | minus: columns_tablet
                    elsif columns_tablet == '2' and columns_mobile == '2'
                      assign dot_count_desktop = product_size | minus: columns_desktop | plus: 1
                      assign dot_count_tablet  = product_size | minus: columns_desktop | minus: columns_tablet
                      assign dot_count_mobile  = product_size | minus: columns_desktop | minus: columns_tablet | minus: 3
                    elsif columns_tablet == '2' and columns_mobile == '1'
                      assign dot_count_desktop = product_size | minus: columns_desktop | plus: 1
                      assign dot_count_tablet  = product_size | minus: columns_desktop | minus: columns_tablet 
                      assign dot_count_mobile  = product_size | minus: columns_desktop | minus: columns_tablet | minus: 1
                    endif
                  endif
                -%}          
                <div class="slideshow__control-wrapper">
                  {%- for product in section.blocks limit: dot_count_desktop -%}
                    <button class="dot_count_desktop slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}" aria-controls="Slider-{{ section.id }}">
                      {%- if section.settings.slider_visual == 'numbers' -%}{{ forloop.index }}{% else %}<span class="dot"></span>{%- endif -%}
                    </button>
                  {%- endfor -%}
                  
                  {%- for product in section.blocks limit: dot_count_tablet -%}
                    <button class="dot_count_tablet large-up-hide slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}" aria-controls="Slider-{{ section.id }}">
                      {%- if section.settings.slider_visual == 'numbers' -%}{{ forloop.index }}{% else %}<span class="dot"></span>{%- endif -%}
                    </button>
                  {%- endfor -%}
                  
                  {%- for product in section.blocks limit: dot_count_mobile -%}
                    <button class="dot_count_mobile medium-hide large-up-hide slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}" aria-controls="Slider-{{ section.id }}">
                      {%- if section.settings.slider_visual == 'numbers' -%}{{ forloop.index }}{% else %}<span class="dot"></span>{%- endif -%}
                    </button>
                  {%- endfor -%}
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
      {%- endif -%}
    </{% if section.settings.slider_visual == 'dots' or section.settings.slider_visual == 'numbers' %}slideshow-component{% else %}slider-component{% endif %}>
    
    {%- if section.settings.collection == blank and section.settings.show_view_all and section.blocks.size > section.settings.columns_desktop -%}
      <div class="center collection-view-all medium-hide large-up-hide">
        <a
          href="{{ section.settings.collection.url | default: routes.all_products_collection_url }}"
          class="{% if section.settings.view_all_style == 'link' or section.settings.view_all_style == 'full-unstyled-link' %}{{ section.settings.view_all_style }}{% if section.settings.view_all_style == 'link' %} animate-arrow{% endif %}{% else %}button {{ section.settings.view_all_style }}{% endif %} button--small"
          id="ViewAllButton-{{ section.id }}"
          aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title | escape }}"
          aria-labelledby="ViewAllButton-{{ section.id }} SectionHeading-{{ section.id }}"
        >
          {% if section.settings.view_all_label != blank %}
            {{ section.settings.view_all_label | escape }}
          {% else %}
            {{- 'sections.collection_list.view_all' | t -}}
          {% endif %}
        </a>
      </div>
    {%- endif -%}
    {% if section.settings.image_shape == 'arch' %}
      {% render 'mask-arch' %}
    {%- endif -%}
  </div>
</div>

